@model StudentViewModel
@{
    ViewData["Title"] = "Student Edit Data";
}

<h2>Form Edit Student</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id">Student Id</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="StudentName">Student Name</label>
        <input asp-for="StudentName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Major">Major</label>
        <input asp-for="Major" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
